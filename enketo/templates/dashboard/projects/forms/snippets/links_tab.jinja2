{% extend_me %}

{% block links_extra_content %}
    {{ super() }}
    <hr>
    {% if formDetails.enketo == None %}
        Enketo URL:<br/>
        <div class="input-group">
            <input type="text" id="enketo_url" readonly value="{{ _('Generate the URLS') }}" class="form-control">
            <span class="input-group-append">
                {% if projectDetails.access_type < 4 %}
                    <a id="generate_enketo_urls" class="btn btn-white btn-bitbucket"  title="{{ _('Generate URLs') }}"><i class="fas fa-sync-alt"></i></a>
                {% endif %}
            </span>
        </div>
    {% else %}
        <div class="input-group">
            <select id="enketo_url" readonly class="form-control">
                <option value="{{ formDetails.enketo.url_multi }}">{{ _('Online-Only (multiple submissions)') }}</option>
                <option value="{{ formDetails.enketo.url_off_multi }}">{{ _('Online-Offline (multiple submission)') }}</option>
                <option value="{{ formDetails.enketo.url_single }}">{{ _('Online-Only (single submission)') }}</option>
                <option value="{{ formDetails.enketo.url_once }}">{{ _('Online-only (once per respondent)') }}</option>
                <option value="{{ formDetails.enketo.url_testing }}">{{ _('View only)') }}</option>
            </select>
            <span class="input-group-append">
                {% if formDetails.enketo_url  %}
                    <a id="enketo_url_copy" class="btn btn-white btn-bitbucket clipboard" data-clipboard-text="{{ formDetails.enketo_url }}" title="{{ _('Copy to clipboard') }}"><i class="far fa-copy"></i></a>
                {% endif %}
                {% if projectDetails.access_type < 4 %}
                    <a id="generate_enketo_urls" class="btn btn-white btn-bitbucket"  title="{{ _('Generate URL') }}"><i class="fas fa-sync-alt"></i></a>
                {% endif %}

                <a id="enketo_url_play" class="btn btn-white btn-bitbucket" target="_blank" href="{{ formDetails.enketo_url }}" title="{{ _('Collect data using Enketo') }}"><i class="fas fa-play"></i></a>
                <a class="btn btn-white btn-bitbucket" href="#" title="{{ _('Edit thank you page') }}"><i class="fas fa-thumbs-up"></i></a>

            </span>
        </div>
    {% endif %}
{% endblock links_extra_content %}