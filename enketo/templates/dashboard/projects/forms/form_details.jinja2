{% extend_me %}

{% block scripts %}
    {{ super() }}
        {% if projectDetails.access_type < 4 %}
            <script>
                $( "#generate_enketo_urls" ).on( "click", function() {
                    var form = document.createElement('form');
                    form.setAttribute('method', 'post');
                    form.setAttribute('action', "{{ request.route_url('enketo_get_url',userid=projectDetails.owner, projcode=projectDetails.project_code, formid=formDetails.form_id) }}");
                    form.style.display = 'hidden';

                    var i = document.createElement("input"); //input element, text
                    i.setAttribute('type',"text");
                    i.setAttribute('name',"csrf_token");
                    i.setAttribute('value','{{ request.session.get_csrf_token() }}');
                    form.appendChild(i);

                    document.body.appendChild(form);
                    $("#busy").show();
                    form.submit();
                } );
            </script>
        {% endif %}
{% endblock scripts %}